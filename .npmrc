# NPM Publishing Configuration for IntentGuard
registry=https://registry.npmjs.org/
access=public

# Ensure package lock is updated
package-lock=true

# Sign git tags on publish
sign-git-tag=false

# Ensure version is updated before publish
git-tag-version=true

# Allow publishing from any branch (for CI/CD)
# Remove this line if you want to enforce publishing only from main
# unsafe-perm=true
